# Home Assistant Verbindung
HA_URL=http://192.168.1.100:8123
HA_TOKEN=dein_long_lived_access_token_hier

# MindHome Add-on Verbindung
# Standard: Ingress-Port 5000, extern ggf. via Port-Mapping (z.B. 8099)
# Bei HA OS: http://<HA_IP>:8099 (wenn Port 8099 gemappt)
# Bei Docker: http://<addon-container>:5000
MINDHOME_URL=http://192.168.1.100:8099

# Ollama (laeuft nativ auf dem Host)
OLLAMA_URL=http://host.docker.internal:11434

# Modelle (3-Stufen: fast/smart/deep)
# MODEL_FAST=qwen3:4b
# MODEL_SMART=qwen3:14b
# MODEL_DEEP=qwen3:32b

# Datenbanken (Docker-intern)
REDIS_URL=redis://redis:6379
CHROMA_URL=http://chromadb:8000

# Benutzer
USER_NAME=Max

# Assistent-Name (wird in settings.yaml ueberschrieben wenn dort gesetzt)
ASSISTANT_NAME=Jarvis

# Server
ASSISTANT_HOST=0.0.0.0
ASSISTANT_PORT=8200
